<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleAccent">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorContainer" />
            <corners android:radius="@dimen/cont_corner_radius2" />
            <stroke
                android:width="2dp"
                android:color="@color/colorAccent" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorContainerOverlay" />
            <corners android:radius="@dimen/cont_corner_radius2" />
            <stroke
                android:width="2dp"
                android:color="@color/colorAccent" />
        </shape>
    </item>
</ripple>