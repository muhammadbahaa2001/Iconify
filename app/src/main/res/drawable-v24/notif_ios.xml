<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleDark">
    <item
        android:end="24dp"
        android:start="24dp"
        android:tint="@color/offStateColor">
        <shape
            android:shape="rectangle"
            android:tint="@color/offStateColor">
            <solid android:color="#66FFFFFF" />
            <corners
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius"
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:end="12dp"
        android:start="12dp">
        <shape
            android:shape="rectangle"
            android:tint="@color/offStateColor">
            <solid android:color="#B3FFFFFF" />
            <corners
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius"
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>
    <item android:bottom="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
</ripple>